{
  "name": "code-guardian",
  "displayName": "Code Guardian",
  "description": "AI-powered VS Code extension that detects security vulnerabilities and suggests secure coding practices.",
  "version": "1.0.0",
  "publisher": "DreamersRedemption",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "contributes": {
    "commands": [
      {
        "command": "codeSecurity.analyzeSelectionWithAI",
        "title": "üß† Analyze Selected Code with AI Security Copilot"
      },
      {
        "command": "codeSecurity.analyzeFullFile",
        "title": "üîç Analyze Full File for Security Issues"
      },
      {
        "command": "codeSecurity.applyFix",
        "title": "üõ†Ô∏è Apply Secure Code Fix"
      }
    ],
    "languages": [
      {
        "id": "javascript",
        "aliases": [
          "JavaScript"
        ],
        "extensions": [
          ".js"
        ]
      },
      {
        "id": "typescript",
        "aliases": [
          "TypeScript"
        ],
        "extensions": [
          ".ts"
        ]
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "vscode:prepublish": "npm run package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "ts-node src/tests/runTest.ts"
  },
  "files": [
    "dist",
    "media",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.30",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "glob": "^11.0.1",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "ollama": "^0.5.14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdhafizur/code-guardian.git",
    "homepage": "https://github.com/mdhafizur/code-guardian#readme",
    "bugs": {
      "url": "https://github.com/mdhafizur/code-guardian/issues"
    }
  }
}
